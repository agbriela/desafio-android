<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">



    <LinearLayout
        android:id="@+id/esquerda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nome_repositorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Repositorio"
            android:textColor="@color/teal_700"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descricao"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="descrição"
            android:textSize="11dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fork_ic"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_star" />

            <TextView
                android:id="@+id/forks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="num"
                android:textColor="@color/text_yellow"
                android:textSize="16dp" />



            <ImageView
                android:id="@+id/star_ic"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_star" />

            <TextView
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="num"
                android:textColor="@color/text_yellow"
                android:textSize="16dp" />



        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/direita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="139dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/esquerda"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icone"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="12dp"

                android:src="@drawable/ic_pessoa" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icone"
                android:layout_marginStart="14dp"
                android:layout_marginTop="4dp"
                android:text="username"
                android:textColor="@color/teal_700"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fullname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/username"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="4dp"
                android:text="Nome Sobrenome"
                android:textAlignment="center"

                android:textSize="10dp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/view"
        android:layout_alignParentTop="true"/>

</RelativeLayout>

